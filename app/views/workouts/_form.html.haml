= simple_form_for(@workout, html: { class: 'form-horizontal' }) do |f|
  = f.input :date, label: "Date"
  = f.input :workout, label: "What area did you work?", input_html: {class: "form_control" }
  = f.input :mood, label: "How were you feeling??", input_html: {class: "form_control" }
  = f.input :length, label: "How long was your workout?", input_html: {class: "form_control" }
  %br/
  = f.button :submit
